
@{
    ViewData["Title"] = "AddContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Contact

<h2>AddContact</h2>

<form method="post">
    <div>
        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" style="color: red;"></span>
        </div>
        
        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" style="color: red;"></span>

        </div>
        
        <div>
            <label asp-for="IsCloseFriend"></label>
            <input asp-for="IsCloseFriend" />
            <span asp-validation-for="IsCloseFriend" style="color: red;"></span>
        </div>
        
        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" style="color: red;"></span>
        </div>
        
    </div>
    <div>
        <input type="submit" value="Add" />
    </div>
</form>